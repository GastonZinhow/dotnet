@model ContatoModel
@{
    ViewData["Title"] = "Criar contatos";
}
<div class="text-center">
    
    <h1 class="display-4">Cadastrar contato</h1>
    
</div>

<form asp-controller="Contato" asp-action="Criar" method="post">

    <div class="form-group mt-2">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do contato">
    </div>

    <div class="form-group mt-2">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o E-mail do contato">
    </div>

    <div class="form-group mt-2">
        <label for="celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o Celular do contato">
    </div>

    <button type="submit" class="btn btn-primary w-100 mt-3">Adicionar</button>
    <a class="btn btn-secondary w-100 mt-2" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>
